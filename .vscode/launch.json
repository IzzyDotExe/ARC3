  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "runtimeExecutable": "nodemon",
      "program" : "${workspaceFolder}/arc3-api/bin/www-dev",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "cwd": "${workspaceFolder}/arc3-api",
      "restart": true,
      "envFile": "${workspaceFolder}/.env",
    },
    {
      "name": "Node File",
      "program": "${file}",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    }
  ]
}